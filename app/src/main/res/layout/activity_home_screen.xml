<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7FAFC"
    tools:context=".HomeScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F7FAFC"
        android:padding="16dp">




        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="@color/cardColor"
            app:contentPadding="16dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="12dp">

            <!-- RelativeLayout to position the image and texts -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Texts aligned to the start (left) -->
                <LinearLayout
                    android:id="@+id/text_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hadil Guellaz"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Master I: ILSI"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Constantine 2 University"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                      android:layout_alignParentEnd="true"
                     android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Career"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp">

        </TextView>





        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:contentPadding="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            app:cardBackgroundColor="@drawable/button_outline_card">

            <!-- RelativeLayout to position the image and texts -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Texts aligned to the start (left) -->
                <LinearLayout
                    android:id="@+id/text_container_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-2025"
                        android:textSize="16dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4F7396"

                        android:text=" ILSI"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4F7396"

                        android:text="20 weeks"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            app:textSize="12sp"
                            android:textAllCaps="false"
                            app:cardBackgroundColor="@color/cardColor"
                            android:elevation="4dp"
                            app:strokeWidth="0dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            app:cardCornerRadius="8dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="#4F7396"
                                android:text="Semester 1"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="12sp">

                            </TextView>


                        </com.google.android.material.card.MaterialCardView>
                        <View android:layout_width="8dp" android:layout_height="0dp"/>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            app:textSize="12sp"
                            android:textAllCaps="false"
                            app:cardBackgroundColor="@color/cardColor"
                            android:elevation="4dp"
                            app:strokeWidth="0dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            app:cardCornerRadius="8dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Semester 2"
                                android:layout_gravity="center"
                                android:textColor="#4F7396"

                                android:textAlignment="center"
                                android:textSize="12sp">

                            </TextView>


                        </com.google.android.material.card.MaterialCardView>










                    </LinearLayout>




                </LinearLayout>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>








    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="#E8EDF2"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>